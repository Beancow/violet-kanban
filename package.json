{
    "name": "violet-kanban",
    "version": "0.1.0",
    "private": true,
    "description": "A Kanban board application built with Next.js and Radix UI.",
    "author": "Avery",
    "scripts": {
        "dev": "DISABLE_SENTRY=1 NEXT_PUBLIC_DISABLE_SENTRY=1 next dev",
        "dev:firebase-debug": "DEBUG_FIREBASE_ADMIN=1 DISABLE_SENTRY=1 NEXT_PUBLIC_DISABLE_SENTRY=1 next dev",
        "build": "next build",
        "build:firebase-debug": "DEBUG_FIREBASE_ADMIN=1 next build",
        "start": "next start",
        "dev:with-sentry": "next dev",
        "lint": "DISABLE_SENTRY=1 NEXT_PUBLIC_DISABLE_SENTRY=1 next lint",
        "test": "jest --watchAll=false --passWithNoTests",
        "test:e2e": "playwright test",
        "test:e2e:ci": "playwright test --reporter=github",
        "test:smoke": "jest --watchAll=false --passWithNoTests tests/smoke",
        "validate:dev-guidelines": "node scripts/validate-dev-guidelines.js --fail-on-unknown-casts"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@hookform/resolvers": "^5.2.1",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-toast": "^1.2.14",
        "@sentry/nextjs": "^9.42.0",
        "firebase": "^12.1.0",
        "immer": "^10.1.1",
        "next": "15.3.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.62.0",
        "use-immer": "^0.11.0",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@babel/core": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@playwright/test": "^1.44.0",
        "@radix-ui/colors": "^3.0.0",
        "@radix-ui/themes": "^3.2.1",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.34.0",
        "eslint-config-next": "^15.4.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "firebase-admin": "^12.1.1",
        "jest": "^30.0.5",
        "jest-environment-jsdom": "^30.0.5",
        "radix-ui": "^1.4.2",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5",
        "zod": "^4.0.17"
    }
