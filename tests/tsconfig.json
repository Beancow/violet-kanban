{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": ["jest", "node"],
        "baseUrl": "..",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["src/components/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/types/*": ["src/types/*"],
            "@/schema/*": ["src/schema/*"],
            "@/utils/*": ["src/utils/*"],
            "@/lib/*": ["src/lib/*"],
            "@/tests/*": ["src/tests/*"]
        }
    },
    "include": ["../src/**/*", "**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
}
