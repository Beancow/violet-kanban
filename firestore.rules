rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function getMembership(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)).data.members[request.auth.uid];
    }

    function isOrgMember(orgId) {
      return isAuthenticated() && getMembership(orgId) != null;
    }

    function isRole(orgId, role) {
      return isOrgMember(orgId) && getMembership(orgId).role == role;
    }

    function isAtLeastRole(orgId, role) {
      let userRole = getMembership(orgId).role;
      return isOrgMember(orgId) &&
        (
          (role == 'member' && userRole in ['owner', 'admin', 'editor', 'member']) ||
          (role == 'editor' && userRole in ['owner', 'admin', 'editor']) ||
          (role == 'admin' && userRole in ['owner', 'admin']) ||
          (role == 'owner' && userRole == 'owner')
        );
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'organizations' collection
    match /organizations/{orgId} {
      allow read: if isOrgMember(orgId);
      allow update, delete: if isAtLeastRole(orgId, 'owner');
      allow create: if isAuthenticated();

      match /boards/{boardId} {
        allow read: if isOrgMember(orgId);
        allow create: if isOrgMember(orgId) && request.resource.data.organizationId == orgId;
        allow update, delete: if isAtLeastRole(orgId, 'editor') || request.auth.uid == resource.data.ownerId;

        match /lists/{listId} {
          allow read: if isOrgMember(orgId);
          allow create: if isOrgMember(orgId) && request.resource.data.boardId == boardId;
          allow update, delete: if isAtLeastRole(orgId, 'editor') || request.auth.uid == resource.data.data.ownerId;
        }

        match /todos/{todoId} {
          allow read: if isOrgMember(orgId);
          allow create: if isOrgMember(orgId);
          allow update, delete: if isAtLeastRole(orgId, 'editor') || request.auth.uid == resource.data.ownerId;
        }
      }
    }
  }
}