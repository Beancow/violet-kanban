{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@/components/*": ["./src/components/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/types/*": ["./src/types/*"],
            "@/schemas/*": ["./src/schemas/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/tests/*": ["./src/tests/*"]
        },
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "incremental": true,
    "plugins": [
        {
            "name": "next"
        }
    ],
    "typeAcquisition": {
        "enable": true,
        "include": ["next", "react", "react-dom"]
    },
    "types": ["next", "react", "react-dom"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        "src/types/**/*.d.ts",
        "src/schema/organization.schema"
    ],
    "exclude": ["node_modules", "public/**/*", ".next"]
}
