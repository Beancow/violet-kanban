{
    "firestore": {
        "database": "(default)",
        "location": "europe-north1",
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
        }
    ],
    "apphosting": {
        "backendId": "a-kanban-board",
        "rootDir": "/",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "functions"
        ]
    },
    "database": {
        "rules": "database.rules.json"
    },
    "emulators": {
        "singleProjectMode": true,
        "firestore": {
            "port": 8080
        },
        "auth": {
            "port": 9099
        },
        "apphosting": {
            "port": 3000,
            "rootDirectory": "./",
            "startCommand": "npm run dev"
        },
        "functions": {
            "port": 5001
        },
        "pubsub": {
            "port": 8085
        },
        "ui": {
            "enabled": true
        }
    }
}
